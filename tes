#!/bin/bash

TEMPLATE_DIR="/var/www/pterodactyl/resources/views/templates"
WRAPPER="$TEMPLATE_DIR/wrapper.blade.php"
BACKUP="$WRAPPER.bak_$(date +'%Y%m%d_%H%M%S')"

# Backup dulu
cp "$WRAPPER" "$BACKUP" || exit

echo "âœ… Backup dibuat: $BACKUP"

# Inject CSS gradient background (tanpa gambar)
sed -i "/<\/head>/i \
<style>\
/* BACKGROUND GRADIENT MODERN */\
body {\
  background: linear-gradient(135deg, #0f172a, #1e1b4b, #312e81);\
  background-attachment: fixed;\
}\
/* Overlay halus biar panel fokus */\
body::before {\
  content: '';\
  position: fixed;\
  inset: 0;\
  background: radial-gradient(circle at top right, rgba(99,102,241,.25), transparent 60%),\
              radial-gradient(circle at bottom left, rgba(139,92,246,.25), transparent 60%);\
  z-index: -1;\
}\
</style>" "$WRAPPER"

echo "ðŸŽ‰ Background gradient berhasil dipasang & MATCH sama sambutan!"
